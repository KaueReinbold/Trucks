@model Trucks.Application.ViewModels.TruckViewModel

<div class="form-group">
    <label asp-for="Chassis" class="control-label"></label>
    <span class="text-danger">*</span>
    <input asp-for="Chassis" class="form-control" />
    <span asp-validation-for="Chassis" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Model" class="control-label"></label>
    <span class="text-danger">*</span>
    <select asp-for="Model" asp-items="Html.GetEnumSelectList<EnumModelViewModel>()
                    .Select(c => new SelectListItem { Value = c.Value, Text = c.Text })
                    .ToList()" class="form-control"></select>
    <span asp-validation-for="Model" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ModelComplement" class="control-label"></label>
    <input asp-for="ModelComplement" class="form-control" />
    <span asp-validation-for="ModelComplement" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Year" class="control-label"></label>
    <span class="text-danger">*</span>
    <input asp-for="Year" readonly class="form-control" />
    <span asp-validation-for="Year" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ModelYear" class="control-label"></label>
    <span class="text-danger">*</span>
    <select asp-for="ModelYear" asp-items="
                        (new List<SelectListItem>() {
                            new SelectListItem { Value = Model.Year.ToString(), Text = Model.Year.ToString() },
                            new SelectListItem { Value = (Model.Year + 1).ToString(), Text = (Model.Year + 1).ToString() }
                        })" class="form-control"></select>
    <span asp-validation-for="ModelYear" class="text-danger"></span>
</div>